#include <stdio.h>

int main() {
    int arr[5], i, j, temp, choice;
    printf("Enter 5 values:\n");
    for(i=0; i<5; i++) {
        scanf("%d", &arr[i]);
    }
    printf("1-Ascending\n2-Descending\nChoose sort order: ");
    scanf("%d", &choice);

    // Bubble Sort
    for(i=0; i<4; i++) {
        for(j=0; j<4-i; j++) {
            if((choice==1 && arr[j]>arr[j+1]) || (choice==2 && arr[j]<arr[j+1])){
                temp = arr[j];
                arr[j] = arr[j+1];
                arr[j+1] = temp;
            }
        }
    }
    printf("Sorted array:\n");
    for(i=0; i<5; i++){
        printf("%d ", arr[i]);
    }
    printf("\n");
    return 0;
}

