#include<stdio.h>
void main()
{
float salary,allowances,deduction,net_salary;
printf("ENTER GROSS SALARY :");
scanf("%f",&salary);
if(salary>10000)
{


    allowances = (salary*10)/100;
    deduction = (salary*3)/100;
    net_salary = salary + allowances - deduction;
    printf("THE NET SALARY IS %f",net_salary);
}
else{
    allowances = (salary*7)/100;
    deduction = (salary*2)/100;
    net_salary = salary + allowances - deduction;
    printf("THE NET SALARY IS %f",net_salary);
}
}



