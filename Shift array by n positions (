#include <stdio.h>

int main() {
    int arr[10], shifted[10], n, dir, i;
    printf("Enter 10 elements:\n");
    for(i=0; i<10; i++)
        scanf("%d", &arr[i]);
    printf("Enter shift value (n): ");
    scanf("%d", &n);
    printf("Enter direction (1-left, 2-right): ");
    scanf("%d", &dir);

    // Initialize shifted array with zeros
    for(i=0; i<10; i++)
        shifted[i] = 0;

    if(dir == 1) { // Left shift
        for(i=0; i<10-n; i++)
            shifted[i] = arr[i+n];
    } else if(dir == 2) { // Right shift
        for(i=n; i<10; i++)
            shifted[i] = arr[i-n];
    }

    printf("Shifted array:\n");
    for(i=0; i<10; i++)
        printf("%d ", shifted[i]);
    printf("\n");
    
}

